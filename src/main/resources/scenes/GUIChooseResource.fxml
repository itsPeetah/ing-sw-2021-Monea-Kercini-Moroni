      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="6.0" prefHeight="140.0" prefWidth="589.0" text="Please pick a resource of your choice." textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Blackadder ITC" size="35.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Label>
      <HBox layoutX="66.0" layoutY="266.0" prefHeight="104.0" prefWidth="468.0">
         <children>
            <ImageView fx:id="coin" fitHeight="80.0" fitWidth="80.0" onMouseClicked="#coinClick" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
               <image>
                  <Image url="@../images/resources/coin.png" />
               </image>
            </ImageView>
            <ImageView fx:id="servant" fitHeight="80.0" fitWidth="80.0" onMouseClicked="#servantClick" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
               <image>
                  <Image url="@../images/resources/servant.png" />
               </image>
            </ImageView>
            <ImageView fx:id="stone" fitHeight="80.0" fitWidth="80.0" onMouseClicked="#stoneClick" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
               <image>
                  <Image url="@../images/resources/stone.png" />
               </image>
            </ImageView>
            <ImageView fx:id="shield" fitHeight="80.0" fitWidth="80.0" onMouseClicked="#shieldClick" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
               <image>
                  <Image url="@../images/resources/shield.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
   </children>
</AnchorPane>
